<h1><%= t('.header', title: @test_passage.test.title) %></h1>

<p>
  <%= t('.count_questions', count_questions: @test_passage.count_questions) %> <%= @test_passage.test.questions.count %>
</p>

<b>
  <%= @test_passage.current_question.body %>
</b>

<div class="card border-primary">
  <div class="card-body">

  <%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
    <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :text, include_hidden:
    false do |b| %>
      <p>
        <%= b.check_box id: "answer_ids_#{b.object.id}" %>
        <%= b.label %>
      </p>
    <% end %>
  </div>
</div>

  <%= link_to 'Gist question', gist_test_passage_path(@test_passage), method: :post %>

  <p><%= form.submit t('test_passages.show.next'), class: 'btn btn-primary mt-4' %></p>

<% end %>
